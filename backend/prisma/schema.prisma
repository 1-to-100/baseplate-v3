generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
  // output        = "../src/generated/prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Connect to Supabase via Shared Connection Pooler
  directUrl = env("DIRECT_URL") //Direct connection to the database through Shared Pooler (supports IPv4/IPv6). Used for migrations.
}

enum CustomerStatus {
  active
  inactive
  suspended
}

model Customer {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @unique
  email                String                 @unique
  domain               String                 @unique
  ownerId              Int                    @unique @map("owner_id")
  status               CustomerStatus         @default(inactive)
  subscriptionId       Int?                   @map("subscription_id")
  managerId            Int?                   @map("manager_id")
  customerSuccessId    Int?                   @map("customer_success_id")
  createdAt            DateTime               @default(now()) @map("created_at")
  updatedAt            DateTime?              @updatedAt @map("updated_at")
  Subscription         Subscription?          @relation(fields: [subscriptionId], references: [id])
  Manager              Manager?               @relation(fields: [managerId], references: [id])
  Owner                User                   @relation("CustomerOwner", fields: [ownerId], references: [id])
  CustomerSuccess      User?                  @relation("CustomerSuccess", fields: [customerSuccessId], references: [id])
  Users                User[]                 @relation("CustomerUsers")
  Articles             Article[]
  Notification         Notification[]
  NotificationTemplate NotificationTemplate[]

  @@index([status])
  @@index([subscriptionId])
  @@index([managerId])
  @@index([createdAt])
  @@map("customers")
}

model Subscription {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime?  @updatedAt @map("updated_at")
  Customers   Customer[]

  @@map("subscriptions")
}

enum Action {
  manage
  create
  read
  update
  delete
}

model Role {
  id          Int              @id @default(autoincrement())
  name        String?
  description String?          @map("description")
  imageUlrl   String?          @map("image_url")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime?        @updatedAt @map("updated_at")
  users       User[]
  permissions RolePermission[]

  @@map("roles")
}

model Permission {
  id    Int    @id @default(autoincrement())
  name  String @unique
  label String

  roles RolePermission[]

  @@map("permissions")
}

model RolePermission {
  roleId       Int @map("role_id")
  permissionId Int @map("permission_id")

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permissions")
}

model Manager {
  id        Int        @id @default(autoincrement())
  name      String?
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime?  @updatedAt @map("updated_at")
  Users     User[]
  Customers Customer[]

  @@map("managers")
}

model UserOneTimeCodes {
  id        Int      @id @default(autoincrement())
  code      String
  userId    Int      @map("user_id")
  isUsed    Boolean  @map("is_used")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("user_one_time_codes")
}

model User {
  id                 Int            @id @default(autoincrement())
  uid                String?        @unique
  email              String         @unique
  emailVerified      Boolean?       @default(false) @map("email_verified")
  firstName          String?        @map("first_name")
  lastName           String?        @map("last_name")
  avatar             String?
  phoneNumber        String?        @map("phone_number")
  customerId         Int?           @map("customer_id")
  roleId             Int?           @map("role_id")
  managerId          Int?           @map("manager_id")
  status             String         @default("inactive")
  isSuperadmin       Boolean?       @default(false) @map("is_superadmin")
  isCustomerSuccess  Boolean?       @default(false) @map("is_customer_success")
  createdAt          DateTime       @default(now()) @map("created_at")
  updatedAt          DateTime?      @updatedAt @map("updated_at")
  deletedAt          DateTime?      @map("deleted_at")
  customer           Customer?      @relation("CustomerUsers", fields: [customerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  successCustomers   Customer[]     @relation("CustomerSuccess")
  role               Role?          @relation(fields: [roleId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  manager            Manager?       @relation(fields: [managerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  ownedCustomer      Customer?      @relation("CustomerOwner")
  articles           Article[]
  Notification       Notification[]
  NotificationSender Notification[] @relation("NotificationSender")

  @@index([deletedAt])
  @@map("users")
}

model ApiLog {
  id          Int      @id @default(autoincrement())
  method      String
  url         String
  statusCode  Int      @map("status_code")
  duration    Int
  requestBody String?  @map("request_body")
  headers     String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("api_logs")
}

model ArticleCategory {
  id          Int       @id @default(autoincrement())
  name        String
  subcategory String?
  about       String?   @db.VarChar(256)
  icon        String?   @db.VarChar(256)
  customerId  Int       @map("customer_id")
  createdBy   Int       @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @map("updated_at")
  Articles    Article[]

  @@map("article_categories")
}

model Article {
  id                Int             @id @default(autoincrement())
  title             String
  articleCategoryId Int             @map("category_id")
  subcategory       String?
  customerId        Int             @map("customer_id")
  createdBy         Int             @map("created_by")
  status            String?         @default("draft")
  content           String?         @db.Text
  videoUrl          String?         @map("video_url")
  viewsNumber       Int?            @default(0) @map("views_number")
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @default(now()) @map("updated_at")
  Category          ArticleCategory @relation(fields: [articleCategoryId], references: [id])
  Creator           User            @relation(fields: [createdBy], references: [id])
  Customer          Customer        @relation(fields: [customerId], references: [id])

  @@map("articles")
}

enum NotificationType {
  EMAIL
  IN_APP
}

model Notification {
  id          Int                   @id @default(autoincrement())
  userId      Int?                  @map("user_id")
  customerId  Int?                  @map("customer_id")
  senderId    Int?                  @map("sender_id")
  type        NotificationType
  title       String?
  message     String?
  templateId  Int?                  @map("template_id")
  metadata    Json?                 @db.Json
  channel     String?               @db.VarChar(256)
  isRead      Boolean               @default(false) @map("is_read")
  createdAt   DateTime              @default(now()) @map("created_at")
  readAt      DateTime?             @map("read_at")
  generatedBy String?               @db.VarChar(256)
  User        User?                 @relation(fields: [userId], references: [id])
  Sender      User?                 @relation("NotificationSender", fields: [senderId], references: [id])
  Customer    Customer?             @relation(fields: [customerId], references: [id])
  Template    NotificationTemplate? @relation(fields: [templateId], references: [id])

  @@index([userId])
  @@index([senderId])
  @@index([customerId])
  @@index([type])
  @@index([createdAt])
  @@index([isRead])
  @@index([channel])
  @@map("notifications")
}

model NotificationTemplate {
  id           Int                @id @default(autoincrement())
  title        String             @db.VarChar(100)
  message      String?            @db.Text
  comment      String?            @db.VarChar(100)
  type         NotificationType[]
  channel      String             @db.VarChar(256)
  customerId   Int?               @map("customer_id")
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime?          @updatedAt @map("updated_at")
  deletedAt    DateTime?          @map("deleted_at")
  Customer     Customer?          @relation(fields: [customerId], references: [id])
  Notification Notification[]

  @@index([title])
  @@index([type])
  @@index([channel])
  @@index([customerId])
  @@index([createdAt])
  @@map("notification_templates")
}
