{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "paths": {
      // Feature-scoped aliases - for clean imports within this feature
      "~/lib/*": ["./lib/*"],
      "~/types/*": ["./lib/types/*"],
      "~/api/*": ["./lib/api/*"],
      "~/components/*": ["./lib/components/*"],
      "~/schemas/*": ["./lib/schemas/*"],
      "~/sql/*": ["./lib/sql/*"],

      // Root aliases (for shared code across the app)
      "@/*": ["../../../../src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/lib/edge/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
